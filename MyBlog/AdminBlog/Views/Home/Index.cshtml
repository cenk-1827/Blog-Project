@{
    ViewData["Title"] = "Home Page";
}
<div class="row" >
    <div class="col-md-4 mx-auto">
        <h1 style="color:white; border:solid; border-color:black; margin-top:100px;padding-left:100px; background-color:mediumvioletred; font-family:'Bradley Hand ITC'; font-size:50px;">  LOGIN  </h1>
        <form method="POST" action="/Home/Login" autocomplete="off" style="margin-top:175px">
            <div class="form-group">
                <input type="text" class="form-control" name="Email" placeholder="Email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="Password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-secondary" style="margin-left:140px">Login</button>
        </form>
    </div>
</div>